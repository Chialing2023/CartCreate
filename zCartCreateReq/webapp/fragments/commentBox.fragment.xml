<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Dialog title="Header Text" contentHeight="30%" contentWidth="30%">
    <l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Label text="Header Text" labelFor="idComment"/>
        <TextArea id="idComment"
			maxLength="150"
            height="3cm"
            width="10cm"
		/>
		<!-- <Input
			id="idComment"
			placeholder="Enter Header Text" editable="true" maxLength="150">
		</Input> -->
	</l:VerticalLayout>
   	<beginButton>
			<Button type="Accept" text="Save" press="onCommentSave"></Button>
		</beginButton>
		<endButton>
			<Button type="Reject" text="Cancel" press="onCancelComment"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>